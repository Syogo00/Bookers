<p id="notice"></p>
<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  
  <tbody>
    <% @books.each do |book| %>
    <tr>
     <th><%= book.title %></th>
     <th><%= book.body %></th>
     <th><%= link_to 'show',book_path(book.id) %></th>
     <th><%= link_to 'edit',edit_book_path(book.id) %></th>
    </tr>
    <% end %>
  </tbody>
</table>

<h2>New Book</h2>

<%= form_with model: @book, url:'/books', method: :post, local: true do |f| %>
<div class=field>
    <%= f.label :title %>
    <br>
    <%= f.text_field :title %>
</div>
<div class=field>
   <%= f.label :body %>
   <br>
   <%= f.text_area :body %>
</div>
<div class="actions">
   <%= f.submit "Create Book" %>
</div>
<% end %>